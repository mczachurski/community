<!-- Quote modal -->
<div class="modal fade" id="quotes-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="z-index: 9999">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Quote the message</h4>
            </div>

            @using (Ajax.BeginForm("AddQuoteAjax", new { Controller = "Messages" }, new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin = "userMessage.OnBeginCreateQuote",
                OnComplete = "userMessage.OnCompleteCreateQuote",
                OnSuccess = "userMessage.OnSuccessCreateQuote",
                OnFailure = "userMessage.OnFailureCreateQuote"
            }, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("quotedMessageId")

                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Mind</label>
                        <label class="control-label pull-right quote-char-counter">200</label>
                        <textarea name="Mind" class="form-control autogrow" style="resize: none"></textarea>
                    </div>
                    <blockquote>
                        <p>
                            <strong id="quoted-user"></strong> <br>
                            <span id="quoted-message"></span>
                        </p>
                    </blockquote>
                    <div class="clearfix"></div>
                </div>
                <div class="modal-footer">
                    <span class="ajax-loader" id="mind-loader">
                        <img src="@Url.Content("~/Content/images/ajax-loader.gif")" />
                    </span>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Post</button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="delete-confirm" tabindex="-1" role="dialog" aria-hidden="true"> 
    <div class="modal-dialog" style="z-index: 9999"> 
	    <div class="modal-content"> 
		    <div class="modal-header"> 
		    	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button> 
		    	<h4 class="modal-title">Delete confirmation</h4> 
		    </div> 
		    <div class="modal-body">
				Are you sure that you want delete message?
			</div> 
		    <div class="modal-footer"> 
                <span class="ajax-loader" id="delete-loader">
                    <img src="@Url.Content("~/Content/images/ajax-loader.gif")" />
                </span>
		    	<button type="button" class="btn btn-white" data-dismiss="modal">Cancel</button> 
		    	<button id="delete-btn" onclick="userMessage.DeleteMessage()" type="button" class="btn btn-info">Delete</button> 
		    </div> 
	    </div> 
    </div> 
</div> 

