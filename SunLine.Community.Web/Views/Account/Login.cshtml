@using SunLine.Community.Web.ViewModels.Account
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id="login", @class = "login-form fade-in-effect", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="login-header">
        <a href="@Url.Action("Index", "Home")" class="logo">
            <img src="@Url.Content("~/Content/images/logo@2x.png")" alt="" width="120" />
            <span>log in</span>
        </a>

        <p>Dear user, log in to access the Community!</p>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-dark", autocomplete="off" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-dark" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-dark  btn-block text-left">
            <i class="fa-lock"></i>
            Log In
        </button>
    </div>

    <div class="login-footer">
        <p>@Html.ActionLink("Register as a new user", "Register")</p>
        <p>@Html.ActionLink("Forgot your password?", "ForgotPassword")</p>

        <div class="info-links">
            <a href="@Url.Action("Terms", "Home")">Terms &amp; Conditions</a> - <a href="@Url.Action("Privacy", "Home")">Privacy Policy</a> - <a href="@Url.Action("Contact", "Home")">Contact</a>
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function() {
            setTimeout(function(){ $(".fade-in-effect").addClass('in'); }, 1);
        })
    </script>

}